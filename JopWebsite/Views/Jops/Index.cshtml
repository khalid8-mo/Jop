@model IEnumerable<JopWebsite.Models.Jop>

@{
    ViewBag.Title = "الوظائف";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="row" style="width:100%">
    <div class="col-lg-12">
        <br />
    </div>

    <div class="col-md-1"></div>
    <div class="col-md-10 ">
        <h2>@ViewBag.Title</h2>

        <p>
            <a href="@Url.Action("Create","Jops")" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span>   اضافة وظيفه جديده</a>
        </p>
        <table class="display table table-striped" id="myTable">
            <thead class="ri">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Category.CategoryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JopTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JopContent)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JopImage)
                    </th>
                    <th>احداث</th>
                </tr>
            </thead>
            <tbody class="ri">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.CategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JopTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JopContent)
                        </td>
                        <td>

                            <img src="~/Uploads/@Html.DisplayFor(modelItem=>item.JopImage)" class="img-thumbnail" style="width:48px;height:48px" />
                        </td>
                        <td>
                            <a href="@Url.Action("Details","Jops",new { id = item.Id })" class="btn btn-outline-success"><span class="glyphicon glyphicon-inbox"></span>  التفاصل </a> 
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div class="col-md-1"></div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#myTable").DataTable(
                {
                    "oLanguage": {
                        "sUrl": "/DataTableSetting/dataTable.txt"
                    }
                });


        });
    </script>
}