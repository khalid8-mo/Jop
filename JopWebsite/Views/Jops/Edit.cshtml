                //    return false
                //}
                if ($("#myimage").val() !== "") {

        
                var fileName = $("#myimage").val();
                var extenstion = fileName.substr(fileName.lastIndexOf('.') + 1);
                var vilidExtintion = ['jpg', 'png', 'gif', 'bmp'];
                if ($.inArray(extenstion, vilidExtintion) == -1) {
                     $("#error-div").fadeIn();
