                    return false;
                }

                var myFilesize = $("#myimage").files[0].size / 1024 / 1024;
                if (myFilesize > 2) {
                      $("#error-div").fadeIn();
                    $("#view-err").append("الرجاء اختيار صوره حجمها اقل من 2ميقا بايت")
                    return false;
                }
        }
            });
        });
    </script>

}
