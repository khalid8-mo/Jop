@model IEnumerable<JopWebsite.Models.Category>
@{
    ViewBag.Title = "الوظائف ";
    Layout = "~/Views/Shared/_Layoutkh.cshtml";
}


<div class="jumbotron">
    <h3>مرحبا بك عزيزي الزائر</h3>
    <p class="lead">
        مرحبا بك في فضاء البحث عن الوظايف باختلاف اصنافها يمكنك نشر وظيفه اذا كنته ناشرأ ويمكنك البحث عن وظيفه اذا كنته باحثأ
    </p>
    <p><a href="@Url.Action("About")" class="btn btn-primary ">المزيد من التفاصيل</a></p>
</div>
@foreach (var item in Model)
{
    <div class="panel">
        <h1 class="panel-heading">@Html.DisplayFor(ModelItem => item.CategoryName)</h1>
        <h3>@Html.DisplayFor(ModelItem => item.CategoryDescription)</h3>
        <div class="row">
            @foreach (var subItem in item.Jobs)
            {


                <div class="col-md-4">
                   
                    <div class="card card-hover" style="margin-left:20px;margin-bottom:30px;height:380px">
                 
                            <img src="~/Uploads/@subItem.JopImage" style="width:100%;height: 197px;" />
                            <div class="card-block">
                                <div class="card-moved">
                                    <h2>@Html.DisplayFor(ModelItem => subItem.JopTitle)</h2>
                                    <p style="font-weight:400">@Html.DisplayFor(ModelItem => subItem.JopContent)</p>
                                    <a href="@Url.Action("Details","Jops",new { id = item.Id })" class="btn btn-microsoft"><span class="glyphicon glyphicon-inbox"></span>  التفاصل </a>
                                </div>
                            </div>
                     
                    </div>
                 
                </div>



            }
        </div>
    </div>
}
