@using Microsoft.AspNet.Identity

@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @id = "Logoff" }))
    {
        @Html.AntiForgeryToken();

        <ul class="nav navbar-nav float-xs-right">
            <li class="dropdown dropdown-user nav-item">
                <a href="#" data-toggle="dropdown" class="dropdown-toggle nav-link dropdown-user-link"><span class="avatar avatar-online"><img src="~/Khstyle/img/Logo.jpg" alt="avatar"><i></i></span><span class="user-name">  @Session["UserName"]</span></a>

                <div class="dropdown-menu dropdown-menu-right">
                    <a href="#" class="dropdown-item"><i class="icon-user"></i> المعلومات الشخصيه</a>
                    <span class="dropdown-item" id="color"><i class="icon-ellipsis"></i>    الوضع المظلم <input type="checkbox" class="checkColor" data-value1="../assets/css/Them.css"  data-value2="../assets/css/Defulte.css" />   </span>
                    <a href="Javascript:document.getElementById('Logoff').submit()" class="dropdown-item"><i class="icon-power3"></i> تسجيل الخروج</a>
                </div>
            </li>

        </ul>


    }
}
else
{
    <ul class="nav navbar-nav float-xs-right">
        <li class="nav-item btn btn-success"style="margin-top: 14px;margin-left: 20px;"><a href="~/Account/Register " style="color:#fff"> <span class="icon-user"></span> اشتراك </a></li>
        <li class="nav-item btn btn-primary"style="margin-top:14px"><a href="~/Account/Login"style="color:#fff"> <span class="icon-prev"></span>   تسجيل الدخول </a></li>

    </ul>
}

